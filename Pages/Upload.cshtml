@page
@model Raindish._01.Pages.UploadModel
@{
    <div class="text-center">
    <h1 class="display-4">File Upload</h1>
    </div>

    <div class="container">
        <div class="mb-3 mt-3">
        <form method="post" enctype="multipart/form-data">
            <div>
                <label class="form-label mb-3">Upload File</label>
                    <input type="file" name="file" class="form-control mb-3" />
            </div>
            <div><button class="btn btn-primary">Upload</button></div>
        </form>
    </div>
    <div>
            @if (!string.IsNullOrWhiteSpace(Model.FilePath))
            {
            <img src="@Model.FilePath" alt="Alertnate Text" />
            }
    </div>
    </div>
}